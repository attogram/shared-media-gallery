<div class="media">
{% if media %}
	<a href="{{ uriBase}}/media/{{ media.pageid }}/"><img src="{{ media.thumburl }}" 
		width="{{ media.thumbwidth }}" height="{{ media.thumbheight }}"></a>
	<br />
	<span class="pageid">{{ media.pageid }}</span>
	<br />
	<span class="title">{{ media.title|e }}</span>
{% else %}
	Media Not Found
{% endif %}
</div>
