<div class="media">
{% if media %}
    <a href="{{ uriBase}}/media/{{ media.pageid }}/"><img src="{{ media.thumburl }}"
        width="{{ media.thumbwidth }}" height="{{ media.thumbheight }}"></a>
    <br />
    <span class="pageid">{{ media.pageid }}</span>
    <br />
    <span class="title">{{ media.shortTitle|slice(0,18)|e }}{% if media.shortTitle|length > 18 %}...{% endif %}</span>
{% else %}
    Media Not Found
{% endif %}
</div>
