{# shared-media-gallery  admin/category.twig  v0.0.1 #}
{{ include('header.twig') }}
{{ include('menu.twig') }}
<div class="content">
	<h1>Categories</h1>
	<form action="">
		<input name="q" type="text" value="{{ query|e }}" size="30" />
		<input type="submit" value="   Search   " />
		&nbsp;&nbsp; limit: <input name="limit" value="{{ limit|e }}" type="text" size="5" />
		&nbsp;&nbsp; endpoint: <em>commons.wikimedia.org</em>
		
	</form>
	
	{% if query %}
	<br>query: {{ query|e }}  limit: {{ limit|e }}
	
	<form action="{{ uriBase }}/admin/category/save/" method="POST">
	<input type="submit" value="  Save selected   ">
	<ul>
	{% for category in results %}
		 <li>
		 <input name="pageid[]" value="{{ category.pageid }}" type="checkbox" />
		 {{ include('thumb.category.twig') }}
		 </li>
	{% endfor %}
	</ul>
	
	<br /><input type="submit" value="  Save selected   ">
	</form>
	
	{% endif %}
</div>

{{ include('footer.twig') }}
