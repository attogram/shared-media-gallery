{{ include('header.twig') }}
{{ include('menu.twig') }}
<div class="content">
    <h1>Media</h1>
    <form action="">
        <input name="q" type="text" value="{{ query|e }}" size="30" />
        <input type="submit" value="   Search   " />
        &nbsp;&nbsp; limit: <input name="limit" value="{{ limit|e }}" type="text" size="5" />
        &nbsp;&nbsp; endpoint: <em>commons.wikimedia.org</em>
    </form>

    {% if query %}
        <hr />
        query: {{ query|e }}  limit: {{ limit|e }}
        <form action="{{ uriBase }}/admin/media/save/" name="cats" method="POST">
        <br />
        <input type="submit" value="  Save selected   ">
        <br />
        {% for media in results %}
            <div style="display:inline-block;border:1px solid black;">
                <input name="pageid[]" value="{{ media.pageid }}" type="checkbox" />{{ include('thumb.media.twig') }}
            </div>
        {% endfor %}
        <br /><br />
        <input type="submit" value="  Save selected   ">
        </form>
        {{ include('admin/javascript.checkall.twig') }}
    {% endif %}
</div>

{{ include('footer.twig') }}
